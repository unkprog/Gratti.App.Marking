<Window x:Class="Gratti.App.Marking.Views.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="LogWindow" Height="450" Width="800" Icon="/Images/log.png" Closed="Window_Closed">

    <ItemsControl ItemsSource="{Binding Items}" Background="Black">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <TextBlock Text="{Binding}" FontSize="10" FontFamily="Arial" Foreground="White" TextWrapping="Wrap"/>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</Window>
