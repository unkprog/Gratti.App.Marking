<Window x:Class="Gratti.App.Marking.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gratti.App.Marking"
        xmlns:vm="clr-namespace:Gratti.App.Marking.Views.Models"      
        mc:Ignorable="d"
        Title="Гратти.Маркировка" Width="1024" Height="768" WindowStartupLocation="CenterScreen" Icon="/logo.png">
    <Window.Resources>
        <vm:MainWindowViewModel x:Key="MainWindowVM"/>
    </Window.Resources>
    <Window.DataContext>
        <Binding Source="{StaticResource MainWindowVM}"/>
    </Window.DataContext>
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ContentControl Content="{Binding Content}" />
        
        <Grid Grid.Row="1" Background="Silver">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Name="logButton" Margin="3 0 0 0 " Click="logButton_Click">Log</Button>
        </Grid>

    </Grid>
</Window>
